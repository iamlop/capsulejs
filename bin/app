#!/usr/bin/env node
'use strict';

var argv = require('optimist').argv;
var capsule = require('./capsule');
var args = argv._;
var c = new capsule.capsule();

switch (args[0]) {
    case 'init':
        c.init();
        break;
    case 'deploy':
        if (args.length > 1) {
            for (var i = 1, len = args.length; i < len; i++) {
                (new capsule.capsule()).deploy(args[i]);
            }
        }
        break;
    case 'rollback':
        c.rollback(args[1]);
        break;
}
